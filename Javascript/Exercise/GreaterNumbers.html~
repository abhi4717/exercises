<html>
<head>
	<title>Find greater of the two numbers</title>
	<script type="text/javascript">
		function greaterThan(num1){
			return function(num2){
				if(num1>num2) return true;
				else	return false;
			}
		}
		function getAnswer(){
			var num1 = parseFloat(document.getElementById('numberInput1').value);
			var num2 = parseFloat(document.getElementById('numberInput2').value);
			var test = greaterThan(num1);
			var answer = document.getElementById('lblAnswer');
			if(!answer.hasChildNodes()){
				var ans = document.createTextNode('');
				answer.appendChild(ans);
			}
			answer.firstChild.nodeValue = test(num2);
		}

	</script>
</head>
<body>
	<form>
		<label>Enter number 1: </label><input type="text" Id="numberInput1" /> 
		<br />
		<label>Enter number 2:	</label><input type="text" Id="numberInput2" />
		<br />
		<input type="button" onClick="getAnswer()" value="Click Me">
		<br />
		Is number 1 greater than number 2? <label id="lblAnswer"></label>
	</form>
</body>
</html>

